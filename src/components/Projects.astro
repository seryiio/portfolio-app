---
import Github from "../icons/github.astro";
import Globe from "../icons/Globe.astro";

const projects = [
    {
        image: "/images/covers/coverAnimev2.webp",
        name: "MyAnimes",
        description:
            "Aplicación web intuitiva que permite a los usuarios almacenar y gestionar sus animes favoritos, en el que se podra organizar y explorar contenido de manera eficiente.",
        tecnologies: [
            "ReactJS",
            "TailwindCSS",
            "SASS",
            "NodeJS",
            "Express",
            "PostgreSQL",
            "TypeScript",
        ],
        url: "https://github.com/seryiio/spazio-project-new",
        urlPage: "https://myanime-rho.vercel.app/",
    },
    {
        image: "/images/covers/coverSpazio.webp",
        name: "Spazio",
        description:
            "Página web estática que potencia la visibilidad de la marca Spazio, ofreciendo una presencia online para promover sus servicios y fortalecer su imagen corporativa.",
        tecnologies: ["ReactJS", "TailwindCSS", "SASS", "JSON", "TypeScript"],
        url: "https://github.com/seryiio/spazio-project-new",
        urlPage: "https://myanime-rho.vercel.app/",
    },
    {
        image: "/images/covers/coverStumatch.webp",
        name: "Stumatch",
        description:
            "Aplicación web que replica el proceso real de matrícula universitaria, con una experiencia virtual para explorar, personalizar horarios y anticipar posibles inconvenientes.",
        tecnologies: [
            "Thymeleaf",
            "Spring Boot",
            "Bootstrap",
            "PostgreSQL",
            "Java",
        ],
        url: "https://github.com/seryiio/stumatch",
        urlPage: "https://myanime-rho.vercel.app/",
    },
];
const seeGithub = "Ver en Github";
const seePage = "Ver página";
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
        projects.map((p) => (
            <div class="flex flex-col justify-end items-end max-w-sm bg-white border-2 border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700  border-solid">
                <a
                    href={p.url}
                    class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110"
                >
                    <img
                        class="rounded-t-lg"
                        width="1440"
                        height="1080"
                        src={p.image}
                        alt={p.name}
                    />
                </a>
                <div class="flex flex-col gap-2 p-5">
                    <a href={p.url}>
                        <h1 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                            {p.name}
                        </h1>
                    </a>
                    <div class="tags">
                        {p.tecnologies.map((t) => (
                            <span class="bg-gray-200 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-500 dark:text-gray-300">
                                {t}
                            </span>
                        ))}
                    </div>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                        {p.description}
                    </p>
                    <div class="flex justify-between items-center">
                        <a
                            href={p.url}
                            class="inline-flex items-center gap-2 w-max px-3 py-2 text-sm font-medium text-center text-secondary dark:text-primaryDark bg-secondary2 rounded-lg hover:bg-cyan-500 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-cyan-400 dark:hover:bg-cyan-700 dark:focus:ring-blue-800"
                            target="_blank"
                        >
                            {seeGithub}
                            <svg height="20" width="20" viewBox="0 0 496 512">
                                <path d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3 .3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5 .3-6.2 2.3zm44.2-1.7c-2.9 .7-4.9 2.6-4.6 4.9 .3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3 .7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3 .3 2.9 2.3 3.9 1.6 1 3.6 .7 4.3-.7 .7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3 .7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3 .7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z" />
                            </svg>
                        </a>
                        <a
                            href={p.urlPage}
                            class="inline-flex items-center gap-2 w-max px-3 py-2 text-sm font-medium text-center text-primary fill-primary dark:text-primaryDark dark:fill-primaryDark bg-secondary rounded-lg hover:bg-cyan-500 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-secondaryDark dark:hover:bg-cyan-700 dark:focus:ring-blue-800"
                            target="_blank"
                        >
                            {seePage}
                            <Globe />
                        </a>
                    </div>
                </div>
            </div>
        ))
    }
</div>
