---
import "@fontsource-variable/onest";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<base href="/" />
		<meta
			name="google-site-verification"
			content="dq4gHUMM6JU-crfEZXMew3iH8-SvB18Tp_WfDHOvNHI"
		/>
		<meta
			name="description"
			content="Portfolio developer fullstack, Sergio Huaman"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-neutral-100 dark:bg-[#0e0f0e] transition-colors ease-in duration-300">
		<div
			class="absolute top-0 z-[-2] h-screen w-full bg-neutral-100 dark:bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
		>
		</div>
		<slot />
	</body>
</html>
<style is:global>
	h1,
	h2,
	span {
		font-family: "Onest Variable", sans-serif;
		font-weight: 700;
		font-style: normal;
	}
	h1 {
		font-size: 2em;
	}
	h2 {
		font-size: 1.75em;
	}
	h3 {
		font-size: 1.5em;
	}

	
	h3,
	h4,
	h5,
	h6,
	p,
	button,
	li,
	a {
		font-family: "Onest Variable", sans-serif;
		font-weight: 400;
		font-style: normal;
	}
</style>
